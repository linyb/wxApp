.calc-wrapper {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    overflow-x: hidden;
    padding:0;
    margin:0;
}
.calc-top {
    width:100%;
    height: 200rpx;
    background-color:#2d2b2b;
    border-bottom:1rpx solid #fff;
}
.calc-res,.calc-tip{
    text-align: right;
    line-height: 150rpx;
    color:#fff;
    font-size:50rpx;
}
.calc-main{
    display: flex;
    width:100%;
}
.calc-to-left{
    width:75%;
}
.calc-to-right {
    width:25%;
    background-color:#f48016;
}
.to-col{
    display: flex;
}
.to-col-oper{
    background-color:#bcbcbc;
}
.to-col-num,.to-col-extra{
    background-color:#cbcbcf;
}
.to-col-v{
    width:33.3%;
    height: 180rpx;
    line-height: 180rpx;
    text-align: center;
    border-right: 1rpx solid #fff;
    border-bottom:1rpx solid #fff;
}
.to-col-extra{
    width:50%;
}

.to-item-r{
    width:100%;
    height: 180rpx;
    line-height: 200rpx;
    text-align: center;
}
