.c-header{
    height: 82rpx;
    background-color:#f6f6f6;
    padding:0 50rpx 0 30rpx; 
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-shadow: 0 4rpx 4rpx #dfdfdf; 
}
.to-pre,.pre-icon {
    height: 34rpx;
    width:20rpx;
}
.c-item{
    padding:15rpx 20rpx 10rpx 10rpx;
    border-bottom: 2rpx solid #ddd; 
}
.c-item-bg {
    width:200rpx;
    height: 200rpx;
    background-repeat: no-repeat;
    background-size: contain;
    background-position: center center;
    margin-right: 20rpx;
    float:left;
}
.c-item-desc{
    float: left;
    width: 500rpx;
}
.c-item-title{
    margin-bottom: 15rpx;
}
.c-item-tip{
    font-size: 20rpx;
    background-color:#e4393c;
    color:#fff;
    border-radius:5rpx;
    display: inline-block;
    padding:3rpx;
}
.c-item-text {
    line-height: 40rpx;
}
.c-price-oper{
    color:#e4393c;
    margin-bottom: 10rpx;
}
.c-price-old{
    color:#a5a5a5;
    text-decoration: line-through;
}
.c-price-now {
    margin-bottom: 10rpx;
    color:#e4393c;
}
.c-price-left{
    margin-right: 50rpx;
    float: left
}